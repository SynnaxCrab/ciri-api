{
  "name": "ciri-api",
  "version": "0.0.1",
  "description": "Ciri API",
  "main": "index.js",
  "engines": {
    "node": "9.2.0"
  },
  "scripts": {
    "build": "babel src --out-dir dist --copy-files",
    "build:up": "babel src --out-dir up --copy-files && cp package.json up",
    "start": "node dist/app.js",
    "dev": "nodemon index.js",
    "test": "mocha --recursive --compilers js:babel-register",
    "migrate:dev": "sequelize --config src/config/database.js db:migrate",
    "rollback:dev": "sequelize --config src/config/database.js db:migrate:undo",
    "migrate:prod": "sequelize --config config/database.js db:migrate",
    "rollback:prod": "sequelize --config config/database.js db:migrate:undo"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.12.0",
    "faker": "^4.1.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.11.0",
    "rewire": "^3.0.2",
    "rosie": "^1.6.0"
  },
  "dependencies": {
    "apollo-server-koa": "^1.2.0",
    "dotenv": "^4.0.0",
    "graphql": "^0.11.7",
    "graphql-tools": "^2.8.0",
    "jsonapi-serializer": "^3.4.1",
    "kcors": "2.2.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.3.0",
    "pg": "^7.4.0",
    "sequelize": "^4.22.11",
    "sequelize-cli": "^3.1.0"
  }
}
